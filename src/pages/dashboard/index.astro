---
import MainLayout from "/src/layouts/MainLayout.astro";
---

<MainLayout>
    <div>
        <h2 class="pl-40 text-6xl text-stone-700">Welcome to your site profile!</h2>
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-16">
        <div class="mt-16 mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white">Dashboard</h1>
            <p class="mt-2 text-lg text-gray-600 dark:text-gray-300">Welcome to your BastionAuth dashboard</p>
        </div>
        
        <!-- Auth Status Check -->
        <div id="auth-required-message" class="hidden">
            <div class="bg-yellow-50 dark:bg-yellow-900/30 border-l-4 border-yellow-400 p-4 rounded-md">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-yellow-700 dark:text-yellow-200">
                            You need to be logged in to view this page.
                            <a href="/" class="font-medium underline text-yellow-700 dark:text-yellow-100 hover:text-yellow-600"> Go to homepage </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        <div id="dashboard-content" class="hidden">
            <!-- No Site Message -->

            <!-- Enhanced User Profile Card -->
<div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl overflow-hidden mb-8 border border-gray-100 dark:border-gray-700">
    <!-- Header Section -->
    <div class="bg-indigo-700 dark:bg-gray-800 px-8 py-6 border-b border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-6">
                <!-- Enhanced Avatar -->
                <div class="relative">
                    <div class="h-20 w-20 rounded-xl bg-indigo-600 dark:bg-indigo-500 flex items-center justify-center text-white text-3xl font-bold shadow-sm" id="user-avatar">
                        <!-- Avatar content populated by JS -->
                    </div>
                    <div class="absolute -bottom-1 -right-1 h-6 w-6 bg-green-500 rounded-full border-3 border-white dark:border-gray-900 flex items-center justify-center">
                        <svg class="h-3 w-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                </div>
                
                <!-- Welcome Message -->
                <div class="text-white">
                    <h2 class="text-3xl font-bold mb-1" id="welcome-message">
                        <!-- Welcome message populated by JS -->
                    </h2>
                    <p class="text-gray-300 dark:text-gray-400 text-lg font-medium" id="user-email">
                        <!-- Email populated by JS -->
                    </p>
                    <div class="flex items-center mt-2 text-sm text-gray-300 dark:text-gray-400">
                        <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <span>Authenticated & Secured</span>
                    </div>
                </div>
            </div>
            
            <!-- Quick Actions -->
            <div class="flex flex-col space-y-2">
                <button onclick="logOut()" class="inline-flex items-center px-4 py-2 bg-gray-700 dark:bg-gray-600 border border-gray-600 dark:border-gray-500 text-white font-medium rounded-lg hover:bg-gray-600 dark:hover:bg-gray-500 transition-all duration-200 shadow-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                    Sign Out
                </button>
            </div>
        </div>
    </div>
    
    <!-- Enhanced Details Section -->
    <div class="px-8 py-6 bg-gray-50 dark:bg-gray-900/50">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Site Information -->
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
                        <svg class="h-5 w-5 mr-2 text-indigo-600 dark:text-indigo-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4.083 9h1.946c.089-1.546.383-2.97.837-4.118A6.004 6.004 0 004.083 9zM10 2a8 8 0 100 16 8 8 0 000-16zm0 2c-.076 0-.232.032-.465.262-.238.234-.497.623-.737 1.182-.389.907-.673 2.142-.766 3.556h3.936c-.093-1.414-.377-2.649-.766-3.556-.24-.56-.5-.948-.737-1.182C10.232 4.032 10.076 4 10 4zm3.971 5c-.089-1.546-.383-2.97-.837-4.118A6.004 6.004 0 0115.917 9h-1.946zm-2.003 2H8.032c.093 1.414.377 2.649.766 3.556.24.56.5.948.737 1.182.233.23.389.262.465.262.076 0 .232-.032.465-.262.238-.234.498-.623.737-1.182.389-.907.673-2.142.766-3.556zm1.166 4.118c.454-1.147.748-2.572.837-4.118h1.946a6.004 6.004 0 01-2.783 4.118zm-6.268 0C6.412 13.97 6.118 12.546 6.03 11H4.083a6.004 6.004 0 002.783 4.118z" clip-rule="evenodd"/>
                        </svg>
                        Site Details
                    </h3>
                    <div class="flex items-center">
                        <div class="h-2 w-2 bg-green-400 rounded-full mr-2"></div>
                        <span class="text-xs text-green-600 dark:text-green-400 font-medium">Active</span>
                    </div>
                </div>
                <div class="space-y-3">
                    <div>
                        <label class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Domain</label>
                        <p class="text-sm font-mono text-gray-900 dark:text-white bg-gray-100 dark:bg-gray-700 px-3 py-2 rounded-lg mt-1" id="user-site-domain">
                            Loading...
                        </p>
                    </div>
                    <div>
                        <label class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Site Name</label>
                        <p class="text-sm font-mono text-gray-900 dark:text-white bg-gray-100 dark:bg-gray-700 px-3 py-2 rounded-lg mt-1" id="user-site-name">
                            Loading...
                        </p>
                    </div>
                </div>
            </div>
            
            <!-- Technical Information -->
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5 mr-2 text-purple-600 dark:text-purple-400"
                            viewBox="0 0 20 20"
                            fill="currentColor" aria-hidden="true">
                        <path d="M12.293 7.293a1 1 0 011.414 0l2 2a4 4 0 010 5.657l-2.002 2.002a4 4 0 01-5.657 0l-.758-.758a1 1 0 011.414-1.414l.758.758a2 2 0 002.829 0l2.002-2.002a2 2 0 000-2.829l-2-2a1 1 0 010-1.414zm-4.586 5.414a1 1 0 01-1.414 0l-2-2a4 4 0 010-5.657l2.002-2.002a4 4 0 015.657 0l.758.758a1 1 0 11-1.414 1.414l-.758-.758a2 2 0 00-2.829 0L4.879 7.879a2 2 0 000 2.829l2 2a1 1 0 010 1.414z"/>
                        </svg>

                        Integration
                    </h3>
                    <div class="px-2 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 text-xs font-medium rounded-full">
                        API v2.1
                    </div>
                </div>
                <div class="space-y-3">
                    <div>
                        <label class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Site ID</label>
                        <p class="text-sm font-mono text-gray-900 dark:text-white bg-gray-100 dark:bg-gray-700 px-3 py-2 rounded-lg mt-1" id="user-site-id">
                            Loading...
                        </p>
                    </div>
                    <div>
                        <label class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">SPA ID</label>
                        <p class="text-sm font-mono text-gray-900 dark:text-white bg-gray-100 dark:bg-gray-700 px-3 py-2 rounded-lg mt-1" id="user-spa-id">
                            Loading...
                        </p>
                    </div>
                </div>
            </div>
            
            <!-- Account Status -->
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
                        <svg class="h-5 w-5 mr-2 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 1L5 6v3h10V6l-5-5zM6 19h8v-7H6v7z" clip-rule="evenodd"/>
                            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        Security Status
                    </h3>
                    <div class="px-2 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 text-xs font-medium rounded-full">
                        Verified
                    </div>
                </div>
                <div class="space-y-3">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600 dark:text-gray-300">Last Login</span>
                        <span class="text-sm font-medium text-gray-900 dark:text-white" id="last-login">Today</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600 dark:text-gray-300">Auth Method</span>
                        <span class="text-sm font-medium text-indigo-600 dark:text-indigo-400">Passwordless</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <!-- change this to active if websocket is connected!! TODO -->
                        <span class="text-sm text-gray-600 dark:text-gray-300">Session Status</span>
                        <div class="flex items-center">
                            <div class="h-2 w-2 bg-green-400 rounded-full mr-2"></div>
                            <span class="text-sm font-medium text-green-600 dark:text-green-400">Active</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


            <div id="no-site-message" class="hidden bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-8 mb-8">
                <div class="text-center">
                    <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900 mb-4">
                        <svg class="h-8 w-8 text-blue-600 dark:text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9" />
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No website connected yet</h3>
                    <p class="text-gray-600 dark:text-gray-300 mb-6">Connect your website to BastionAuth to start seeing authentication analytics and manage your users.</p>
                    <div class="flex justify-center space-x-4">
                        <a href="/get-started" class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-md transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                            Get Started
                        </a>
                        <a href="/docs" class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-200 font-medium rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            View Documentation
                        </a>
                    </div>
                </div>
            </div>

            <!-- Site Analytics Section -->
            <div id="site-analytics" class="hidden">
                <!-- Usage Chart -->
                <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden mb-8">
                    <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
                        <div class="flex items-center justify-between">
                            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Authentication Usage</h3>
                            <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
                                <div class="w-3 h-3 rounded-full bg-indigo-500"></div>
                                <span>Daily requests</span>
                            </div>
                        </div>
                    </div>
                    <div class="px-6 py-8">
                        <div class="relative h-80">
                            <canvas id="usage_chart" class="w-full h-full"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Analytics Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                    <!-- Total Requests -->
                    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                        <div class="px-6 py-5">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Total Requests</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900 dark:text-white" id="total-requests">0</dd>
                            <div class="mt-2 flex items-center text-sm">
                                <span class="text-green-600 dark:text-green-400 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span id="requests-change">+12%</span>
                                </span>
                                <span class="ml-2 text-gray-500 dark:text-gray-400">from last week</span>
                            </div>
                        </div>
                    </div>

                    <!-- Successful Logins -->
                    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                        <div class="px-6 py-5">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Successful Logins</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900 dark:text-white" id="successful-logins">0</dd>
                            <div class="mt-2 flex items-center text-sm">
                                <span class="text-green-600 dark:text-green-400 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span id="logins-change">+8%</span>
                                </span>
                                <span class="ml-2 text-gray-500 dark:text-gray-400">from last week</span>
                            </div>
                        </div>
                    </div>

                    <!-- Active Users -->
                    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                        <div class="px-6 py-5">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Active Users</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900 dark:text-white" id="active-users">0</dd>
                            <div class="mt-2 flex items-center text-sm">
                                <span class="text-blue-600 dark:text-blue-400 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span id="users-change">+5%</span>
                                </span>
                                <span class="ml-2 text-gray-500 dark:text-gray-400">from last week</span>
                            </div>
                        </div>
                    </div>

                    <!-- Error Rate -->
                    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                        <div class="px-6 py-5">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Error Rate</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900 dark:text-white" id="error-rate">0%</dd>
                            <div class="mt-2 flex items-center text-sm">
                                <span class="text-red-600 dark:text-red-400 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span id="error-change">-2%</span>
                                </span>
                                <span class="ml-2 text-gray-500 dark:text-gray-400">from last week</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Standard Dashboard Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                    <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Security Status</h3>
                    </div>
                    <div class="px-6 py-5">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg class="h-6 w-6 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h4 class="text-base font-medium text-gray-900 dark:text-white">Your account is secure</h4>
                                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Using passwordless authentication protects you from credential theft and phishing.</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Recent Activity -->
                <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                    <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Recent Activity</h3>
                    </div>
                    <div class="px-6 py-5">
                        <ul class="space-y-4" id="recent-activity">
                            <li class="flex items-center">
                                <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
                                <div>
                                    <p class="text-sm font-medium text-gray-900 dark:text-white">Successful login</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Today, just now</p>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <!-- Settings -->
                <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                    <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Account Settings</h3>
                    </div>
                    <div class="px-6 py-5">
                        <ul class="space-y-2">
                            <li>
