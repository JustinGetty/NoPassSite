        // ─── Make socket and sendMessage global ───
        let socket = null;

        function sendMessage(msg) {
        if (socket && socket.readyState === WebSocket.OPEN) {
            socket.send(msg);
        } else {
            console.warn("WebSocket not open; cannot send:", msg);
        }
        }
        window.sendMessage = sendMessage;
        // ──────────────────────────────────────────


        let usageChart;
        let websocketConnected = false;
        
        document.addEventListener('DOMContentLoaded', function() {
            checkAuthentication();
        });
        
        function checkAuthentication() {
            // Check if user data exists in localStorage
            const userData = localStorage.getItem('bastionAuthUser');
            
            initializeWebSocket();

            if (!userData) {
                // Show auth required message
                document.getElementById('auth-required-message').classList.remove('hidden');
            } else {
                // Show dashboard content and populate with user data
                document.getElementById('dashboard-content').classList.remove('hidden');
                initializeChart();
                
                try {
                    const user = JSON.parse(userData);
                    populateDashboard(user);
                    //checkUserSite(user);
                    //sendMessage(`check_authentication{${user.username}}`)
                    console.log(user);
                } catch (e) {
                    console.error('Error parsing user data', e);
                    // Fallback to showing auth required
                    document.getElementById('dashboard-content').classList.add('hidden');
                    document.getElementById('auth-required-message').classList.remove('hidden');
                }
            }
        }

        function populateDashboard(user) {
    // Existing avatar and welcome message
            const userAvatar = document.getElementById('user-avatar');
            if (userAvatar) {
                userAvatar.textContent = user.username ? user.username.charAt(0).toUpperCase() : 'U';
            }
            
            const welcomeMessage = document.getElementById('welcome-message');
            if (welcomeMessage) {
                welcomeMessage.textContent = `Welcome back, ${user.username || 'User'}`;
            }

            const userEmail = document.getElementById('user-email');
            if (userEmail) {
                userEmail.textContent = user.email || 'No email provided';
            }
            
            // Populate site details (these will be updated via WebSocket)
            const siteDomain = document.getElementById('user-site-domain');
            if (siteDomain) {
                siteDomain.textContent = user.site_domain || 'Not configured';
            }
            
            const siteName = document.getElementById('user-site-name');
            if (siteName) {
                siteName.textContent = user.site_name || 'Not configured';
            }
            
            const siteId = document.getElementById('user-site-id');
            if (siteId) {
                siteId.textContent = user.site_id || 'Not assigned';
            }
            
            const spaId = document.getElementById('user-spa-id');
            if (spaId) {
                spaId.textContent = user.spa_id || 'Not assigned';
            }
        }

