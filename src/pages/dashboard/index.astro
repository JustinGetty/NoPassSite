---
import MainLayout from "/src/layouts/MainLayout.astro";
---

<MainLayout>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-16">
        <div class="mt-16 mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white">Dashboard</h1>
            <p class="mt-2 text-lg text-gray-600 dark:text-gray-300">Welcome to your BastionAuth dashboard</p>
        </div>
        
        <!-- Auth Status Check -->
        <div id="auth-required-message" class="hidden">
            <div class="bg-yellow-50 dark:bg-yellow-900/30 border-l-4 border-yellow-400 p-4 rounded-md">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-yellow-700 dark:text-yellow-200">
                            You need to be logged in to view this page.
                            <a href="/" class="font-medium underline text-yellow-700 dark:text-yellow-100 hover:text-yellow-600"> Go to homepage </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        <div id="dashboard-content" class="hidden">
            <!-- User Profile Card -->
            <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden mb-8">
                <div class="px-6 py-8 sm:p-10">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="h-16 w-16 rounded-full bg-indigo-100 dark:bg-indigo-900 flex items-center justify-center text-indigo-600 dark:text-indigo-300 text-2xl font-bold" id="user-avatar">
                            </div>
                            <div class="ml-6">
                                <h2 class="text-2xl font-bold text-gray-900 dark:text-white" id="welcome-message">
                                </h2>
                                <p class="text-gray-500 dark:text-gray-400" id="user-email">
                                </p>
                            </div>
                        </div>
                        <div class="text-right">
                            <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">Your site:</p>
                            <div id="user-site-info" class="text-lg font-medium text-gray-900 dark:text-white">
                                <!-- Site info will be populated here -->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="border-t border-gray-200 dark:border-gray-700 px-6 py-4 bg-gray-50 dark:bg-gray-900/50">
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-500 dark:text-gray-400">Last login: <span id="last-login">Today</span></span>
                        <button 
                            onclick="logOut()" 
                            class="inline-flex items-center px-3 py-1.5 border border-gray-300 dark:border-gray-600 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                            </svg>
                            Sign Out
                        </button>
                    </div>
                </div>
            </div>

            <!-- No Site Message -->
            <div id="no-site-message" class="hidden bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-8 mb-8">
                <div class="text-center">
                    <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 dark:bg-blue-900 mb-4">
                        <svg class="h-8 w-8 text-blue-600 dark:text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9" />
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No website connected yet</h3>
                    <p class="text-gray-600 dark:text-gray-300 mb-6">Connect your website to BastionAuth to start seeing authentication analytics and manage your users.</p>
                    <div class="flex justify-center space-x-4">
                        <a href="/get-started" class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-md transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                            Get Started
                        </a>
                        <a href="/docs" class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-200 font-medium rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            View Documentation
                        </a>
                    </div>
                </div>
            </div>

            <!-- Site Analytics Section -->
            <div id="site-analytics" class="hidden">
                <!-- Usage Chart -->
                <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden mb-8">
                    <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
                        <div class="flex items-center justify-between">
                            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Authentication Usage</h3>
                            <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
                                <div class="w-3 h-3 rounded-full bg-indigo-500"></div>
                                <span>Daily requests</span>
                            </div>
                        </div>
                    </div>
                    <div class="px-6 py-8">
                        <div class="relative h-80">
                            <canvas id="usage_chart" class="w-full h-full"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Analytics Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                    <!-- Total Requests -->
                    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                        <div class="px-6 py-5">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Total Requests</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900 dark:text-white" id="total-requests">0</dd>
                            <div class="mt-2 flex items-center text-sm">
                                <span class="text-green-600 dark:text-green-400 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span id="requests-change">+12%</span>
                                </span>
                                <span class="ml-2 text-gray-500 dark:text-gray-400">from last week</span>
                            </div>
                        </div>
                    </div>

                    <!-- Successful Logins -->
                    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                        <div class="px-6 py-5">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Successful Logins</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900 dark:text-white" id="successful-logins">0</dd>
                            <div class="mt-2 flex items-center text-sm">
                                <span class="text-green-600 dark:text-green-400 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span id="logins-change">+8%</span>
                                </span>
                                <span class="ml-2 text-gray-500 dark:text-gray-400">from last week</span>
                            </div>
                        </div>
                    </div>

                    <!-- Active Users -->
                    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                        <div class="px-6 py-5">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Active Users</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900 dark:text-white" id="active-users">0</dd>
                            <div class="mt-2 flex items-center text-sm">
                                <span class="text-blue-600 dark:text-blue-400 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span id="users-change">+5%</span>
                                </span>
                                <span class="ml-2 text-gray-500 dark:text-gray-400">from last week</span>
                            </div>
                        </div>
                    </div>

                    <!-- Error Rate -->
                    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                        <div class="px-6 py-5">
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Error Rate</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900 dark:text-white" id="error-rate">0%</dd>
                            <div class="mt-2 flex items-center text-sm">
                                <span class="text-red-600 dark:text-red-400 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span id="error-change">-2%</span>
                                </span>
                                <span class="ml-2 text-gray-500 dark:text-gray-400">from last week</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Standard Dashboard Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                    <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Security Status</h3>
                    </div>
                    <div class="px-6 py-5">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg class="h-6 w-6 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h4 class="text-base font-medium text-gray-900 dark:text-white">Your account is secure</h4>
                                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Using passwordless authentication protects you from credential theft and phishing.</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Recent Activity -->
                <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                    <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Recent Activity</h3>
                    </div>
                    <div class="px-6 py-5">
                        <ul class="space-y-4" id="recent-activity">
                            <li class="flex items-center">
                                <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
                                <div>
                                    <p class="text-sm font-medium text-gray-900 dark:text-white">Successful login</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Today, just now</p>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <!-- Settings -->
                <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
                    <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Account Settings</h3>
                    </div>
                    <div class="px-6 py-5">
                        <ul class="space-y-2">
                            <li>
                                <a href="#" class="flex items-center text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-300">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                    Profile Settings
                                </a>
                            </li>
                            <li>
                                <a href="#" class="flex items-center text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-300">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                    </svg>
                                    Security Settings
                                </a>
                            </li>
                            <li>
                                <a href="#" class="flex items-center text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-300">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                                    </svg>
                                    Notification Settings
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script>

        // ─── Make socket and sendMessage global ───
        let socket = null;

        function sendMessage(msg) {
        if (socket && socket.readyState === WebSocket.OPEN) {
            socket.send(msg);
        } else {
            console.warn("WebSocket not open; cannot send:", msg);
        }
        }
        window.sendMessage = sendMessage;
        // ──────────────────────────────────────────


        let usageChart;
        let websocketConnected = false;
        
        document.addEventListener('DOMContentLoaded', function() {
            checkAuthentication();
        });
        
        function checkAuthentication() {
            // Check if user data exists in localStorage
            const userData = localStorage.getItem('bastionAuthUser');
            
            initializeWebSocket();

            if (!userData) {
                // Show auth required message
                document.getElementById('auth-required-message').classList.remove('hidden');
            } else {
                // Show dashboard content and populate with user data
                document.getElementById('dashboard-content').classList.remove('hidden');
                
                try {
                    const user = JSON.parse(userData);
                    populateDashboard(user);
                    //checkUserSite(user);
                    //sendMessage(`check_authentication{${user.username}}`)
                    console.log(user);
                } catch (e) {
                    console.error('Error parsing user data', e);
                    // Fallback to showing auth required
                    document.getElementById('dashboard-content').classList.add('hidden');
                    document.getElementById('auth-required-message').classList.remove('hidden');
                }
            }
        }
        
        function populateDashboard(user) {
            const userAvatar = document.getElementById('user-avatar');
            if (userAvatar) {
                userAvatar.textContent = user.username ? user.username.charAt(0).toUpperCase() : 'U';
            }
            
            const welcomeMessage = document.getElementById('welcome-message');
            if (welcomeMessage) {
                welcomeMessage.textContent = `Welcome, ${user.username || 'User'}!`;
            }

            const userEmail = document.getElementById('user-email');
            if (userEmail) {
                userEmail.textContent = user.email || '';
            }
        }
        
        function checkUserSite(user) {
            //const hasSite = user.website || user.domain || user.site_url;
            //TODO need to get this from backend
            //SIGNIFICANT SECURITY SHOULD BE ADDED
            const hasSite = true;

            
            if (!hasSite) {
                document.getElementById('no-site-message').classList.remove('hidden');
                document.getElementById('user-site-info').innerHTML = '<span class="text-gray-400 dark:text-gray-500">Not configured</span>';
            } else {
                document.getElementById('site-analytics').classList.remove('hidden');
                document.getElementById('user-site-info').textContent = user.website || user.domain || user.site_url;
                
                initializeChart();
                initializeWebSocket();
            }
        }
        
        function initializeChart() {
            const ctx = document.getElementById('usage_chart').getContext('2d');
            
            usageChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Authentication Requests',
                        data: [],
                        borderColor: 'rgb(67, 56, 202)',
                        backgroundColor: 'rgba(67, 56, 202, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: 'rgb(67, 56, 202)',
                        pointBorderColor: 'white',
                        pointBorderWidth: 2,
                        pointRadius: 6,
                        pointHoverRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        intersect: false,
                        mode: 'index'
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            titleColor: 'white',
                            bodyColor: 'white',
                            borderColor: 'rgb(67, 56, 202)',
                            borderWidth: 1,
                            cornerRadius: 8,
                            displayColors: false
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                display: false
                            },
                            border: {
                                display: false
                            },
                            ticks: {
                                color: 'rgb(107, 114, 128)'
                            }
                        },
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(107, 114, 128, 0.1)'
                            },
                            border: {
                                display: false
                            },
                            ticks: {
                                color: 'rgb(107, 114, 128)',
                                precision: 0
                            }
                        }
                    }
                }
            });
        }
        
        function initializeWebSocket() {
            socket = new WebSocket('ws://192.168.1.213:1212');
            
            socket.onopen = function(event) {
                websocketConnected = true;
                console.log('Connected to WebSocket server');

                // ► AUTHENTICATE FIRST:
                const userData = localStorage.getItem('bastionAuthUser');
                if (userData) {
                    const user = JSON.parse(userData);
                    sendMessage(`check_authentication{${user.username}}`);
                } else {
                    // show login prompt if no user
                    document.getElementById('auth-required-message').classList.remove('hidden');
                }

                // ► THEN FETCH CHART DATA
                sendMessage("get_chart_data");

                // ► START POLLING
                setInterval(() => sendMessage("get_chart_data"), 5000);
            };
            
            socket.onmessage = function (event) {
                try {
                    const payload = JSON.parse(event.data);
                    if (payload.data_type === 'site_req_data'){
                        const site_data_obj = JSON.parse(event.data);

                        //reformat the year!!, make years the last two digits
                        const newLabels = [...new Set(site_data_obj.data.map(
                            r => `${formatDate(r.req_date_time)[1]}/${formatDate(r.req_date_time)[2]}/${formatDate(r.req_date_time)[0]}`
                        ))];
                        
                        const reqNumDict = {};

                        site_data_obj.data.forEach(r => {
                        const key = formatDate(r.req_date_time)[2];
                        //if this date hasn’t been seen yet, start at 0, then add 1
                        reqNumDict[key] = (reqNumDict[key] || 0) + 1;
                        });
                        console.log(reqNumDict);

                        const req_num_array = Object.values(reqNumDict);
                        console.log(req_num_array);
                        
                        usageChart.data.datasets[0].data = req_num_array;
                        usageChart.data.labels = newLabels;
                        usageChart.update('none');
                    
                    }

                    else if (payload.data_type === "client_data"){
                        console.log(payload)
                        const userData = localStorage.getItem('bastionAuthUser');
                        const user = JSON.parse(userData);
                        user.site_domain = payload.data.site_domain;
                        user.site_id = payload.data.site_id;
                        user.site_name = payload.data.site_name;
                        user.spa_id = payload.data.spa_id;
                        console.log(user);
                        if (!user.spa_id) {
                            document.getElementById('no-site-message').classList.remove('hidden');
                            document.getElementById('user-site-info').innerHTML = '<span class="text-gray-400 dark:text-gray-500">Not configured</span>';
                        } else {
                            document.getElementById('site-analytics').classList.remove('hidden');
                            document.getElementById('user-site-info').textContent = user.website || user.domain || user.site_url;
                            
                            initializeChart();
                        }
                    }



                } catch (e) {
                    console.error('Error parsing WebSocket data:', e);
                }



            };
            
            socket.onclose = function (event) {
                websocketConnected = false;
                console.log('Disconnected from WebSocket server');
                
                setTimeout(() => {
                    if (!websocketConnected) {
                        initializeWebSocket();
                    }
                }, 5000);
            };
            
            socket.onerror = function (error) {
                console.error('WebSocket error:', error);
                websocketConnected = false;
            };
            
            function sendMessage(message) {
                if (socket.readyState === WebSocket.OPEN) {
                    socket.send(message);
                }
            }
            
            window.sendMessage = sendMessage;
        }
        
        function updateChart(siteData) {
            if (!usageChart || !siteData.data) return;
            
            const dateRequestMap = {};
            
            siteData.data.forEach(record => {
                const date = new Date(record.req_date_time * 1000);
                const dateKey = `${date.getMonth() + 1}/${date.getDate()}`;
                dateRequestMap[dateKey] = (dateRequestMap[dateKey] || 0) + 1;
            });
            
            const labels = [];
            const data = [];
            const today = new Date();
            
            for (let i = 6; i >= 0; i--) {
                const date = new Date(today);
                date.setDate(date.getDate() - i);
                const dateKey = `${date.getMonth() + 1}/${date.getDate()}`;
                
                labels.push(dateKey);
                data.push(dateRequestMap[dateKey] || 0);
            }
            
            usageChart.data.labels = labels;
            usageChart.data.datasets[0].data = data;
            usageChart.update('none'); 
        }
        
        function updateAnalytics(siteData) {
            if (!siteData.data) return;
            
            const data = siteData.data;
            const totalRequests = data.length;
            
            // Calculate successful logins (assuming success field exists)
            const successfulLogins = data.filter(record => record.success !== false).length;
            
            // Calculate active users (unique users in last 24 hours)
            const oneDayAgo = Math.floor(Date.now() / 1000) - (24 * 60 * 60);
            const recentData = data.filter(record => record.req_date_time > oneDayAgo);
            const activeUsers = new Set(recentData.map(record => record.user_id || record.email)).size;
            
            // Calculate error rate
            const errors = data.filter(record => record.success === false).length;
            const errorRate = totalRequests > 0 ? ((errors / totalRequests) * 100).toFixed(1) : 0;
            
            // Update DOM elements
            document.getElementById('total-requests').textContent = totalRequests.toLocaleString();
            document.getElementById('successful-logins').textContent = successfulLogins.toLocaleString();
            document.getElementById('active-users').textContent = activeUsers.toLocaleString();
            document.getElementById('error-rate').textContent = errorRate + '%';
            
            // Update recent activity
            updateRecentActivity(data.slice(-5)); // Last 5 activities
        }
        
        function updateRecentActivity(recentData) {
            const activityContainer = document.getElementById('recent-activity');
            if (!activityContainer || !recentData.length) return;
            
            const activityHTML = recentData.reverse().map(record => {
                const date = new Date(record.req_date_time * 1000);
                const timeString = date.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
                const isSuccess = record.success !== false;
                
                return `
                    <li class="flex items-center">
                        <div class="w-2 h-2 ${isSuccess ? 'bg-green-500' : 'bg-red-500'} rounded-full mr-2"></div>
                        <div>
                            <p class="text-sm font-medium text-gray-900 dark:text-white">
                                ${isSuccess ? 'Successful' : 'Failed'} authentication
                            </p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">Today, ${timeString}</p>
                        </div>
                    </li>
                `;
            }).join('');
            
            activityContainer.innerHTML = activityHTML;
        }
        
        function formatDate(unixTimestamp) {
            const date = new Date(unixTimestamp * 1000);
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0'); 
            const day = String(date.getDate()).padStart(2, '0');
            const hours = String(date.getHours()).padStart(2, '0');
            const minutes = String(date.getMinutes()).padStart(2, '0');
            const seconds = String(date.getSeconds()).padStart(2, '0');

            return [year, month, day, hours, minutes, seconds];
        }
        
        function logOut() {
            localStorage.removeItem('bastionAuthUser');
            window.location.href = '/';
        }
